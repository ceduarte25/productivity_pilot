generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model task {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(255)
  note        String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  createdById String
  user        user     @relation(fields: [createdById], references: [id], map: "Task_createdById_fkey")

  @@index([createdById], map: "Task_createdById_fkey")
}

model user {
  id       String @id
  email    String @unique(map: "User_email_key")
  password String
  task     task[]
}
